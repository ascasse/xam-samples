<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CollectedSamples.ViewModels"
             x:Class="CollectedSamples.Views.ActivityIndicatorPage"
             Title="{ Binding Title }">

    <ContentPage.BindingContext>
        <local:ActivityIndicatorViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout BackgroundColor="Honeydew">
            <Label Text="Welcome to Xamarin.Forms!" WidthRequest="150" BackgroundColor="DarkMagenta" TextColor="Wheat"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>